<div class="span12"> 
	<div class="question">
		<%= link_to("New question", new_question_path , :class => "btn btn-mini btn-primary pull-right" ) %>
	</div>
	<table class="table">
		<thead> 
			<tr>
				<td> # </td>
				<td> Type </td>
				<td> Img </td>
				<td> Answer </td>
			</tr>
		</thead>
		<tbody>
			<% @questions.each do |question| %> 
			<tr>
				<td>
					<% if question.attachment?%>
						<%= image_tag question.attachment.url(:thumb) %>
					<% end %>
				</td>
				<td> <%= link_to(question.title, question_path(question)) %> </td>
				<td>question.img</td>
				<td>question.answer</td>
				<td> <%= link_to("Edit", edit_question_path(question), :class => "btn btn-mini")%>
				<%= link_to("Delete", question_path(question), :class => "btn btn-mini", :method=>:delete,:confirm=>"Areyousure?")%>
				</td> 
			</tr>
			<% end %> 
		</tbody>
	</table>
</div>